{
  "name": "caesaraigames",
  "version": "1.0.0",
  "description": "CaesarAI Games - Game Management Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.caesaraigames.app",
    "productName": "CaesarAI Games",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "build/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "imgs/CaesarAIMoviesLogo.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "uuid": "^13.0.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4",
    "ws": "^8.19.0"
  }
}
